    <!-- JSON-LD for the top story -->
    {% if main_headline %}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "headline": "{{ main_headline.headline }}",
      "image": "{{ main_headline.related_image_url or 'https://via.placeholder.com/600x300?text=AI+Headline+Image' }}",
      "datePublished": "{{ main_headline.published }}",
      "author": { "@type": "Organization", "name": "Exhaustive AI" },
      "publisher": {
        "@type": "Organization",
        "name": "Exhaustive AI",
        "logo": {
          "@type": "ImageObject",
          "url": "https://raw.githubusercontent.com/Rut304/Operation_AI_News/d058fd91cc84d63a2c40991bb05955b960c23818/image%20(4).jpg"
        }
      }
    }
    </script>
    {% endif %}

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-color: #121212;
            --text-color: #e0e0e0;
            --link-color: #e0e0e0;
            --hover-color: #ffffff;
            --border-color: #333;
            --headline-color: #e0e0e0;
            --source-color: #999999;
            --title-color: #eca213;

            /* Card tones */
            --card-bg: #161616;
            --card-border: #2a2a2a;
            --card-shadow: 0 1px 0 rgba(0,0,0,0.25);
            --card-shadow-hover: 0 6px 20px rgba(0,0,0,0.25);
        }

        /* Light mode */
        @media (prefers-color-scheme: light) {
            :root {
                --bg-color: #fff;
                --text-color: #000;
                --link-color: #000;
                --hover-color: #0000ff;
                --border-color: #ccc;
                --headline-color: #333;
                --source-color: #666;
                --title-color: #eca213;

                --card-bg: #fff;
                --card-border: #e6e6e6;
                --card-shadow: 0 1px 0 rgba(0,0,0,0.06);
                --card-shadow-hover: 0 8px 24px rgba(0,0,0,0.08);
            }
        }

        /* Base */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            margin: 0;
            padding: 20px;
            line-height: 1.6;
        }

        header { text-align: center; margin-bottom: 28px; }
        .logo { max-width: 200px; height: auto; }

        h1 {
            color: var(--title-color);
            font-size: 3.6em;
            text-align: center;
            margin: 0 0 6px 0;
        }

        /* Top (main) story as a larger card */
        .main-article {
            max-width: 980px;
            margin: 0 auto 36px auto;
        }
        .main-card {
            display: grid;
            grid-template-columns: 1fr;
            gap: 12px;
            border: 1px solid var(--card-border);
            border-radius: 12px;
            background: var(--card-bg);
            box-shadow: var(--card-shadow);
            padding: 16px;
            transition: box-shadow .15s ease, transform .05s ease;
            text-align: left;
        }
        .main-card:hover { box-shadow: var(--card-shadow-hover); transform: translateY(-1px); }

        .main-headline {
            font-size: 2.2em;
            color: var(--headline-color);
            margin: 0;
            text-decoration: none;
            font-weight: 800;
            line-height: 1.15;
        }
        .main-headline a { color: inherit; text-decoration: underline; text-decoration-thickness: 1px; }

        .meta {
            color: var(--source-color);
            font-size: 0.9em;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .meta .dot { opacity: .5; }

        .main-image {
            width: 100%;
            max-height: 340px;
            overflow: hidden;
            border-radius: 10px;
            background: #0d0d0d;
        }
        .main-image img { width: 100%; height: auto; display: block; object-fit: cover; }

        /* Columns */
        .columns {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
        }
        @media (min-width: 992px) {
            .columns {
                grid-template-columns: repeat(3, 1fr);
                gap: 18px;
            }
        }

        .column { display: grid; gap: 12px; }

        /* Headline cards (WSJ-style boxes) */
        .headline-card {
            display: grid;
            grid-template-columns: 1fr;
            gap: 10px;
            border: 1px solid var(--card-border);
            border-radius: 10px;
            padding: 12px;
            background: var(--card-bg);
            box-shadow: var(--card-shadow);
            transition: box-shadow .15s ease, transform .05s ease;
        }
        .headline-card:hover { box-shadow: var(--card-shadow-hover); transform: translateY(-1px); }

        /* Optional thumbnails (kept small to preserve thin cards) */
        .thumb {
            display: block;
            width: 100%;
            max-height: 140px;
            overflow: hidden;
            border-radius: 8px;
            background: #0d0d0d;
        }
        .thumb img { width: 100%; height: auto; display: block; object-fit: cover; }

        .headline {
            font-size: 1.1em;
            color: var(--headline-color);
            margin: 0;
            font-weight: 800;
            line-height: 1.25;
        }
        .headline a { color: inherit; text-decoration: underline; text-underline-offset: 1px; }

        .source {
            font-style: italic;
            font-size: 0.9em;
            color: var(--source-color);
        }

        /* Your existing random styles still apply */
        .style1 { font-weight: bold; color: var(--headline-color); }
        .style2 { font-style: italic; color: var(--headline-color); }
        .style3 { font-weight: bold; font-size: 1.2em; color: var(--headline-color); }
        .style4 { color: var(--headline-color); }

        /* Footer */
        footer {
            text-align: center;
            margin-top: 40px;
            font-size: 0.8em;
            color: var(--source-color);
        }
        footer ul {
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }
        footer li { flex-basis: 20%; min-width: 150px; }
        footer a { color: var(--link-color); text-decoration: underline; }

        /* Mobile */
        @media (max-width: 768px) {
            h1 { font-size: 2.4em; }
            .main-headline { font-size: 1.6em; }
            .headline { font-size: 1em; }
            .main-image { max-height: 260px; }
        }
    </style>
</head>
<body>
<header>
    <h1>Exhaustive AI</h1>
</header>

{% if main_headline %}
<section class="main-article">
    <article class="main-card">
        <h2 class="main-headline {{ main_headline.style }}">
            <a href="{{ main_headline.url }}" target="_blank" rel="noopener noreferrer">
                {{ main_headline.headline }}
            </a>
        </h2>
        <div class="meta">
            <span class="source">{{ main_headline.source }}</span>
            <span class="dot">•</span>
            <time datetime="{{ main_headline.published }}">{{ main_headline.published[:10] }}</time>
        </div>
        {% if main_headline.image_url %}
        <a class="main-image" href="{{ main_headline.url }}" target="_blank" rel="noopener noreferrer">
            <img src="{{ main_headline.image_url }}" alt="Main article image for {{ main_headline.headline }}">
        </a>
        {% endif %}
    </article>
</section>
{% endif %}

<div class="columns">
    <!-- Column 1 -->
    <div class="column">
        {% for item in column1 %}
        {% set show_image = (loop.index % 2 == 0) and item.image_url %}
        <article class="headline-card">
            {% if show_image %}
            <a href="{{ item.url }}" class="thumb" target="_blank" rel="noopener">
                <img src="{{ item.image_url }}" alt="Article image for {{ item.headline }}">
            </a>
            {% endif %}
            <h3 class="headline {{ item.style }}">
                <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">
                    {{ item.headline }}
                </a>
            </h3>
            <div class="meta">
                <span class="source">{{ item.source }}</span>
                <span class="dot">•</span>
                <time datetime="{{ item.published }}">{{ item.published[:10] }}</time>
            </div>
        </article>
        {% endfor %}
    </div>

    <!-- Column 2 -->
    <div class="column">
        {% for item in column2 %}
        {% set show_image = (loop.index % 2 == 0) and item.image_url %}
        <article class="headline-card">
            {% if show_image %}
